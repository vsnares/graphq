{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "globals": {
        "React": true
    },

    "ecmaFeatures": {
        "modules": true,
        "jsx": true
    },

    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },

    "plugins": [
        "react"
    ]
}
